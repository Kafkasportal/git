# ============================================
# Dernek Yönetim Sistemi - Environment Variables
# ============================================
# Bu dosyayı .env.local olarak kopyalayın ve değerleri doldurun
# cp .env.example .env.local

# ============================================
# Application Settings
# ============================================
NEXT_PUBLIC_APP_NAME="Dernek Yönetim Sistemi"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_ENABLE_REALTIME="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="false"

# ============================================
# Appwrite Configuration (ZORUNLU)
# ============================================
NEXT_PUBLIC_APPWRITE_ENDPOINT="https://cloud.appwrite.io/v1"
NEXT_PUBLIC_APPWRITE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_APPWRITE_DATABASE_ID="your-database-id"
APPWRITE_API_KEY="your-api-key"

# ============================================
# Security Secrets (Production'da ZORUNLU)
# ============================================
CSRF_SECRET="development-csrf-secret-min-32-chars-change-in-production"
SESSION_SECRET="development-session-secret-min-32-chars-change-in-production"

# ============================================
# Email Configuration (SMTP) - Opsiyonel
# ============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@yourdomain.com"

# ============================================
# SMS Configuration (Twilio) - Opsiyonel
# ============================================
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# ============================================
# Rate Limiting - Opsiyonel
# ============================================
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# ============================================
# File Upload Limits - Opsiyonel
# ============================================
MAX_FILE_SIZE="10485760"
MAX_FILES_PER_UPLOAD="5"

NODE_ENV="development"
