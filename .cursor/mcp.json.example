{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "."],
      "description": "Proje dosyalarına erişim"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "description": "GitHub repo, issue, PR yönetimi"
    },
    "appwrite": {
      "command": "npx",
      "args": ["-y", "mcp-server-appwrite"],
      "env": {
        "APPWRITE_ENDPOINT": "${NEXT_PUBLIC_APPWRITE_ENDPOINT}",
        "APPWRITE_PROJECT_ID": "${NEXT_PUBLIC_APPWRITE_PROJECT_ID}",
        "APPWRITE_API_KEY": "${APPWRITE_API_KEY}"
      },
      "description": "Appwrite veritabanı, auth, storage yönetimi"
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Oturum bazlı bilgi saklama"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "description": "Karmaşık problemleri adım adım çözme"
    },
    "fetch": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "description": "API istekleri"
    }
  }
}
